<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 버튼 2개와 textView를 묶어줌-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imbtnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/back"
            tools:ignore="VectorDrawableCompat"
            android:background="#00000000"
            android:layout_margin="25dp"/>

        <TextView
            android:id="@+id/tvCurentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="현재 날짜"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:background="#D0EEFF"/>

        <ImageButton
            android:id="@+id/imbtnCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/save"
            tools:ignore="VectorDrawableCompat"
            android:layout_margin="25dp"
            android:background="#00000000"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#020202"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imviewTooth"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginVertical="46dp"
            app:srcCompat="@drawable/tooth" />

        <TextView
            android:id="@+id/tvMorning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_marginVertical="40dp"
            android:text="아침"

            android:layout_marginLeft="10dp"
            android:textSize="23dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvBrushTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:textSize="20dp"
        android:text="- 양치 시간"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp">


        <Button
            android:id="@+id/btn1_1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="1분 30초 미만" />

        <Button
            android:id="@+id/btn1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1분 30초 이상 3분 미만" />

        <Button
            android:id="@+id/btn1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3분 이상" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvAfterMealBrush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:textSize="20dp"
        android:text="- 식후 양치 시간"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/btn2_1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="식후 3분 이내" />

        <Button
            android:id="@+id/btn2_2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="식후 10분 이내" />

        <Button
            android:id="@+id/btn2_3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="식후 30분 이상" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvUseToothSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:textSize="20dp"
        android:text="- 구강 보조 기구 사용"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/btn3_1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="치실" />

        <Button
            android:id="@+id/btn3_2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="가그린" />

        <Button
            android:id="@+id/btn3_3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="사용안함" />
    </LinearLayout>


</LinearLayout>